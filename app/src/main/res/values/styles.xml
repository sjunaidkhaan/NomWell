<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="actionSheetStyle">@style/ActionSheetStyle</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyle</item>
        <!--<item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>-->
    </style>

    <style name="ContactsAppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_filter</item>
        <item name="colorPrimaryDark">@color/blue_filter</item>
        <item name="colorAccent">@color/blue_filter_light</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleContacts</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tabLayout">
        <item name="android:tabStripEnabled">false</item>
        <item name="tabPaddingStart">@dimen/stroke_width</item>
        <item name="tabPaddingEnd">@dimen/stroke_width</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="ratingBar18" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_18</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="ratingBar18Contacts" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_contacts_18</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="ratingBar24" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_24</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="ratingBar24Contacts" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_contacts_24</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppCompatDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#556170</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/edittext_padding</item>
    </style>

    <style name="AppTheme.IOSButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_ios_</item>
        <item name="android:textSize">@dimen/text_size_header_small</item>
    </style>

    <style name="AppTheme.AddSpotTextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/textview_padding</item>
        <item name="android:drawablePadding">@dimen/textview_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/add_spot_text_color</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/edittext_padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- iOS7 Style -->
    <style name="ActionSheetStyle">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">@color/colorPrimaryDark</item>
        <item name="otherButtonTextColor">@color/colorPrimaryDark</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
    </style>

    <style name="ActionSheetStyleContacts">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">@color/blue_filter</item>
        <item name="otherButtonTextColor">@color/blue_filter</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
    </style>

</resources>
