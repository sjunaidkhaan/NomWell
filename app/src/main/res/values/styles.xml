<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="tabLayout">
        <item name="android:tabStripEnabled">false</item>
        <item name="tabPaddingStart">@dimen/stroke_width</item>
        <item name="tabPaddingEnd">@dimen/stroke_width</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="ratingBar18" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_18</item>
    </style>

    <style name="ratingBar24" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbars_24</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppCompatDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#556170</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/edittext_padding</item>
    </style>

    <style name="AppTheme.AddSpotTextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/textview_padding</item>
        <item name="android:drawablePadding">@dimen/textview_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/edittext_padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
