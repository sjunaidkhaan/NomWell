<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ListImportFragment"
    tools:showIn="@layout/activity_list_import">

    <RelativeLayout
        android:id="@+id/rlTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_med">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="To:" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lblTo"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edittext_padding" />
    </RelativeLayout>

    <View
        android:id="@+id/vwSeparator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlTo"
        android:background="@color/material_grey" />


    <RelativeLayout
        android:id="@+id/rlCcBcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vwSeparator1"
        android:padding="@dimen/padding_med">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblCcBcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cc/Bcc:" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtCcBcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lblCcBcc"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edittext_padding" />
    </RelativeLayout>

    <View
        android:id="@+id/vwSeparator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlCcBcc"
        android:background="@color/material_grey" />


    <RelativeLayout
        android:id="@+id/rlSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vwSeparator2"
        android:padding="@dimen/padding_med">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Subject:" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lblSubject"
            android:background="@android:color/transparent"
            android:inputType="textEmailSubject"
            android:padding="@dimen/edittext_padding" />
    </RelativeLayout>

    <View
        android:id="@+id/vwSeparator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlSubject"
        android:background="@color/material_grey" />


    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vwSeparator3"
        android:padding="@dimen/padding_med">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="@dimen/edittext_padding" />
    </RelativeLayout>


</RelativeLayout>
